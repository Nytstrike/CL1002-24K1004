// Task 1: Write a program that calculates the sum of all the elements in array using pointers
// (Note: Generate the array via user)
#include<stdio.h>
int main(){
    int arr[10];
    int* ptr=arr;
    int sum;
    for(int i=0;i<10;i++){
        printf("Enter number:");
        scanf("%d",&arr[i]);
        sum+=*(ptr+i);
            }
    printf("%d",sum);
}
